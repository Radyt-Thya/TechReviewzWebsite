@page "/comments/edit"
@using Microsoft.EntityFrameworkCore
@using TechReviewzWebsite.Domain
@inject IDbContextFactory<TechReviewzWebsite.Data.TechReviewzWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Comments</h2>
<hr />
@if (Comments is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post"
                      Model="Comments"
                      OnValidSubmit="UpdateComments"
                      FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert" />
                <input type="hidden" name="Comments.Id" value="@Comments.Id" />
                <div class="mb-3">
                    <label for="content" class="form-label">Content:</label>
                    <InputText id="content" @bind-Value="Comments.Content" class="form-control" />
                    <ValidationMessage For="() => Comments.Content" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datecreated" class="form-label">DateCreated:</label>
                    <InputDate id="datecreated" @bind-Value="Comments.DateCreated" class="form-control" />
                    <ValidationMessage For="() => Comments.DateCreated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="dateupdated" class="form-label">DateUpdated:</label>
                    <InputDate id="dateupdated" @bind-Value="Comments.DateUpdated" class="form-control" />
                    <ValidationMessage For="() => Comments.DateUpdated" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="userid" class="form-label">UserId:</label>
                    <InputNumber id="userid" @bind-Value="Comments.UserId" class="form-control" />
                    <ValidationMessage For="() => Comments.UserId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="reviewid" class="form-label">ReviewId:</label>
                    <InputNumber id="reviewid" @bind-Value="Comments.ReviewId" class="form-control" />
                    <ValidationMessage For="() => Comments.ReviewId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/comments">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Comments? Comments { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Comments ??= await context.Comments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Comments is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateComments()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Comments!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CommentsExists(Comments!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/comments");
    }

    private bool CommentsExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Comments.Any(e => e.Id == id);
    }
}
