@page "/Register"
@rendermode InteractiveServer
@inject NavigationManager Navigation

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.WebUtilities
@using TechReviewzWebsite.Components.Account
@using TechReviewzWebsite.Components.Account.Pages
@using TechReviewzWebsite.Data
@using TechReviewzWebsite.Components.Account.Shared

@inject UserManager<TechReviewzWebsiteUser> UserManager
@inject IUserStore<TechReviewzWebsiteUser> UserStore
@inject SignInManager<TechReviewzWebsiteUser> SignInManager
@inject IEmailSender<TechReviewzWebsiteUser> EmailSender
@inject ILogger<Register> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager
@inject RoleManager<IdentityRole> RoleManager
@layout AccountLayout

<PageTitle>Registration</PageTitle>

<div class="background">
        <StatusMessage Message="@Message" />
        <EditForm Model="Input" asp-route-returnUrl="@ReturnUrl" method="post" OnValidSubmit="RegisterUser" FormName="register">
            <DataAnnotationsValidator />
            <div class="heading">
                <h1><b>Create an Account</b></h1>
            </div>
            <div class="panel1">
            <ValidationSummary class="text-danger" role="alert" />
            <div class="details">
                <h3><b>Profile Picture</b></h3>
                <div class="profile">
                    <label>
