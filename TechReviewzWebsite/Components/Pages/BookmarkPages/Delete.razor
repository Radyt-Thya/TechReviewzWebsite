@page "/bookmarks/delete"
@using Microsoft.EntityFrameworkCore
@using TechReviewzWebsite.Domain
@inject IDbContextFactory<TechReviewzWebsite.Data.TechReviewzWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Bookmark</h2>
    <hr />
    @if (bookmark is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@bookmark.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Rating</dt>
            <dd class="col-sm-10">@bookmark.Rating</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@bookmark.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@bookmark.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@bookmark.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ReviewId</dt>
            <dd class="col-sm-10">@bookmark.ReviewId</dd>
        </dl>
        <EditForm method="post" Model="bookmark" OnValidSubmit="DeleteBookmark" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(bookmark is null)">Delete</button> |
            <a href="/bookmarks">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Bookmark? bookmark;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        bookmark = await context.Bookmark.FirstOrDefaultAsync(m => m.Id == Id);

        if (bookmark is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBookmark()
    {
        using var context = DbFactory.CreateDbContext();
        context.Bookmark.Remove(bookmark!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/bookmarks");
    }
}
