@page "/reviews/details"
@using Microsoft.EntityFrameworkCore
@using TechReviewzWebsite.Domain
@inject IDbContextFactory<TechReviewzWebsite.Data.TechReviewzWebsiteContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Review</h2>
    <hr />
    @if (review is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@review.Title</dd>
            <dt class="col-sm-2">Content</dt>
            <dd class="col-sm-10">@review.Content</dd>
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@review.Category</dd>
            <dt class="col-sm-2">Tag</dt>
            <dd class="col-sm-10">@review.Tag</dd>
            <dt class="col-sm-2">Rating</dt>
            <dd class="col-sm-10">@review.Rating</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@review.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@review.DateUpdated</dd>
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@review.UserId</dd>
            <dt class="col-sm-2">ProductId</dt>
            <dd class="col-sm-10">@review.ProductId</dd>
        </dl>
        @if (CommentsList is null)
        {
            <p>Loading comments...</p>
        }
        else if (CommentsList.Count == 0)
        {
            <p>No comments yet.</p>
        }
        else
        {
            <div class="mt-3">
                @foreach (var c in CommentsList)
                {
                    <div class="border rounded p-2 mb-2">
                        <div>@c.Content</div>
                        <small class="text-muted">@c.DateCreated</small>
                    </div>
                }
            </div>
        }
        <div>
            <a href="@($"/reviews/edit?id={review.Id}")">Edit</a> |
            <a href="@($"/reviews")">Back to List</a> |
            <a href="@($"/reviews/{review.Id}/comments/create")">Write a comment</a>


          
        </div>
    }
</div>

@code {
    private Review? review;

    [SupplyParameterFromQuery]
    private int Id { get; set; }
    private List<Comments> CommentsList = new();

    protected override async Task OnInitializedAsync()
    {

        using var context = DbFactory.CreateDbContext();
        review = await context.Review.FirstOrDefaultAsync(m => m.Id == Id);

        CommentsList = await context.Comments
    .Where(c => c.ReviewId == review.Id)
    .OrderByDescending(c => c.DateCreated)
    .ToListAsync();

        if (review is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
