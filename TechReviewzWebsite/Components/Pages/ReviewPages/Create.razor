@page "/reviews/create"
@using Microsoft.EntityFrameworkCore
@using TechReviewzWebsite.Components.Account
@using TechReviewzWebsite.Data
@using TechReviewzWebsite.Domain
@inject IDbContextFactory<TechReviewzWebsite.Data.TechReviewzWebsiteContext> DbFactory
@inject NavigationManager NavigationManager
@inject IdentityUserAccessor UserAccessor

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private Review Review { get; set; } = new();

    private readonly List<string> Categories = new()
    {
        "Laptops",
        "Smartphones & Tablets",
        "Personal Computer (PC)",
        "PC Components",
        "Peripherals",
        "Wearables",
        "Home Appliances"
    };

    private readonly List<string> Rating = new()
    {
        "1",
        "2",
        "3",
        "4",
        "5"
    };

    private IList<Product>? Products;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Products = await context.Product.ToListAsync();

        // Ensure Review.UserId is set to the domain user (int) that maps to the current identity user
        var identityUser = await UserAccessor.GetRequiredUserAsync(HttpContext);
        if (identityUser is not null)
        {
            // Use the actual TechReviewzWebsiteUser type (from TechReviewzWebsite.Data)
            var domainUser = await context.Users
                .FirstOrDefaultAsync(u => u.UserName == identityUser.UserName || u.Email == identityUser.Email);

            if (domainUser is null)
            {
                domainUser = new TechReviewzWebsiteUser
                {
                    UserName = identityUser.UserName,
                    Email = identityUser.Email
                };
                context.Users.Add(domainUser);
                await context.SaveChangesAsync();
            }

            Review.UserId = domainUser.Id; // assign int FK
        }
    }

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddReview()
    {
        using var context = DbFactory.CreateDbContext();

        //Set the DateCreated and DateUpdated fields to the current date and time.
        Review.DateCreated = DateTime.Now;
        Review.DateUpdated = DateTime.Now;

        context.Review.Add(Review);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/reviews");
    }
}

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Review</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Review" OnValidSubmit="AddReview" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label> 
                <InputText id="title" @bind-Value="Review.Title" class="form-control" /> 
                <ValidationMessage For="() => Review.Title" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="content" class="form-label">Content:</label> 
                <InputText id="content" @bind-Value="Review.Content" class="form-control" /> 
                <ValidationMessage For="() => Review.Content" class="text-danger" /> 
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category:</label>
                <InputSelect id="category" @bind-Value="Review.Category" class="form-select">
                    <option value="">-- Select Category --</option>
                    @foreach (var c in Categories)
                    {
                        <option value="@c">@c</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Review.Category" class="text-danger" />
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating:</label>
                <InputSelect id="rating" @bind-Value="Review.Rating" class="form-control">
                    <option value="0">-- Select Rating --</option>
                    @if (Rating?.Count > 0)
                    {
                        foreach (var r in Rating)
                        {
                            <option value="@r">@r</option>
                        }
                    }
                </InputSelect>
                <ValidationMessage For="() => Review.Rating" class="text-danger" /> 
            </div>        
            <div class="mb-3" hidden>
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="Review.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => Review.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3" hidden>
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="Review.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => Review.DateUpdated" class="text-danger" /> 
            </div>        

            @* Product selector *@
            <div class="mb-3">
                <label for="productid" class="form-label">Product:</label>
                <InputSelect id="productid" @bind-Value="Review.ProductId" class="form-control">
                    <option value="0">-- Select Product --</option>
                    @if (Products?.Count > 0)
                    {
                        foreach (var p in Products)
                        {
                            <option value="@p.Id">@p.Name</option>
                        }
                    }
                </InputSelect>
                <ValidationMessage For="() => Review.ProductId" class="text-danger" />
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/reviews">Back to List</a>
</div>
